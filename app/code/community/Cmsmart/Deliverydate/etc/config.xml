<?xml version="1.0"?>
<config>
    <modules>
        <Cmsmart_Deliverydate>
            <version>1.0.1</version>
        </Cmsmart_Deliverydate>
    </modules>
    <frontend>
        <routers>
            <deliverydate>
                <use>standard</use>
                <args>
                    <module>Cmsmart_Deliverydate</module>
                    <frontName>deliverydate</frontName>
                </args>
            </deliverydate>
        </routers>
        <layout>
            <updates>
                <deliverydate>
                    <file>cmsmart/deliverydate.xml</file>
                </deliverydate>
            </updates>
        </layout>

        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <deliverydate_observer>
                        <type>singleton</type>
                        <class>deliverydate/observer</class>
<!--                        <class>Cmsmart_Deliverydate_Model_Observer</class>-->
                        <method>checkout_controller_onepage_save_shipping_method</method>
                    </deliverydate_observer>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <sales_order_save_after>
                <observers>
                    <order_set_shippingarrivaldate>
                        <type>model</type>
                        <class>Cmsmart_Deliverydate_Helper_Data</class>
                        <method>saveShippingArrivalDate</method>
                    </order_set_shippingarrivaldate>
                </observers>
            </sales_order_save_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <deliverydate>
                <use>admin</use>
                <args>
                    <module>Cmsmart_Deliverydate</module>
                    <frontName>deliverydate</frontName>
                </args>
            </deliverydate>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <sales translate="title" module="sales">
                <children>
                    <deliverydate translate="title" module="sales">
                        <title>Delivery Date</title>   
                            <children>
                                 <config>
                                    <title>Configuration</title>                       
                                    <action>adminhtml/system_config/edit/section/deliverydate</action>
                                    <sort_order>10</sort_order>
                                </config>
                                <deliverytime>
                                    <title>Delivery Time</title>                       
                                    <action>deliverydate/adminhtml_deliverydate</action>
                                    <sort_order>10</sort_order>
                                </deliverytime>
                                <holiday>
                                    <title>Delivery Holiday</title>                       
                                    <action>deliverydate/adminhtml_holiday</action>
                                    <sort_order>10</sort_order>
                                </holiday>
                               
                            </children>                       
                        <sort_order>10</sort_order>
                    </deliverydate>
                </children>
            </sales>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Cmsmart_Deliverydate>
                            <title>Deliverydate Module</title>
                            <sort_order>10</sort_order>
                        </Cmsmart_Deliverydate>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <deliverydate>
                                            <title>Delivery Date</title>
                                        </deliverydate>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <deliverydate>
                    <file>cmsmart/deliverydate/deliverydate.xml</file>
                </deliverydate>
            </updates>
        </layout>
        <events>      
            <sales_order_save_after>
                <observers>
                    <set_order_shippingarrivaldate>
                        <type>model</type>
                        <class>Cmsmart_Deliverydate_Helper_Data</class>
                        <method>saveShippingArrivalDateAdmin</method>
                    </set_order_shippingarrivaldate>
                </observers>
            </sales_order_save_after>          
        </events>
    </adminhtml>
    <global>
        <models>
            <deliverydate>
                <class>Cmsmart_Deliverydate_Model</class>
                <resourceModel>deliverydate_mysql4</resourceModel>
            </deliverydate>
            <deliverydate_mysql4>
                <class>Cmsmart_Deliverydate_Model_Mysql4</class>
                <entities>
                    <deliverydate>
                        <table>deliverytime</table>
                    </deliverydate>
                    <holiday>
                        <table>deliveryholiday</table>
                    </holiday>
                </entities>
            </deliverydate_mysql4>
        </models>
        <resources>
            <deliverydate_setup>
                <setup>
                    <module>Cmsmart_Deliverydate</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </deliverydate_setup>
            <deliverydate_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </deliverydate_write>
            <deliverydate_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </deliverydate_read>
             <holiday_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </holiday_write>
            <holiday_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </holiday_read>
        </resources>
        <blocks>
            <deliverydate>
                <class>Cmsmart_Deliverydate_Block</class>
            </deliverydate>
            <sales>
                <rewrite>
                    <order_info>Cmsmart_Deliverydate_Block_Order_Info</order_info>
                </rewrite>
            </sales>
        </blocks>
        <helpers>
            <deliverydate>
                <class>Cmsmart_Deliverydate_Helper</class>
            </deliverydate>
        </helpers>
        <default>
            <deliverydate>
                <deliverydate_general>
                    <enabled>0</enabled> 
                    <on_which_page>1</on_which_page>   
                    <deliverydate_html>Please choose your preferrable future delivery time for current #order.</deliverydate_html>                                        
                    <deliverydate_format>d/M/Y</deliverydate_format>
                    <deliverytime_format>g:i a</deliverytime_format>
                    <deliverydate_dayoff></deliverydate_dayoff>
                </deliverydate_general>
            </deliverydate>
        </default>
       <events>
            <sales_quote_collect_totals_after>
                <observers>
                    <set_custom_money>
                        <type>singleton</type>
                        <class>Cmsmart_Deliverydate_Model_Observer</class>
                        <method>setcustommoney</method>
                    </set_custom_money>
                </observers>
            </sales_quote_collect_totals_after>
        </events>
    </global>
</config>