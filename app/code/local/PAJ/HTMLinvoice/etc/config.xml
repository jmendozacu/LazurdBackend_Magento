<?xml version="1.0"?>
<config>
    <modules>
        <PAJ_HTMLinvoice>
            <version>0.3</version>
        </PAJ_HTMLinvoice>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <htmlinvoice before="Mage_Adminhtml">PAJ_HTMLinvoice_Adminhtml</htmlinvoice>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <helpers>
            <htmlinvoice>
                <class>PAJ_HTMLinvoice_Helper</class>
            </htmlinvoice>
        </helpers>
        <blocks>
            <htmlinvoice>
                <class>PAJ_HTMLinvoice_Block</class>
            </htmlinvoice>
            <!--<adminhtml>
                <rewrite>
                    <sales_order_view>PAJ_HTMLinvoice_Block_Sales_Order_View</sales_order_view>
                </rewrite>
                <rewrite>
                    <sales_order_invoice_view>PAJ_HTMLinvoice_Block_Sales_Order_Invoice_View</sales_order_invoice_view>
                </rewrite>
            </adminhtml>-->
        </blocks>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <htmlinvoice>
                    <file>paj/htmlinvoice/htmlinvoicebackend.xml</file>
                </htmlinvoice>
            </updates>
        </layout>
    </adminhtml>
</config>